<div class="container-fluid">

  <div class="userform">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email"%>
        </div><br />

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div><br />

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div><br />
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-outline-primary" %>
          <!-- all link setup in devise/shared/_link.html.erb -->
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>

</div>