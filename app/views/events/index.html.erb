<div class="container">
  <div class="col-md-12 col-md-offset-0">
    <div class="row">
      
      <div class="col-md-9"></div>
      <div class="col-md-3" id="event-filter">
        <select class="custom-select">
          <option selected>依條件排序</option>
          <option value="1">時間</option>
          <option value="2">熱門度</option>
          <option value="3">瀏覽人次</option>
        </select>
      </div>

      <div class="col-md-12"></div>
      
      <% for i in 0..19 do %> <!-- 之後改成 @events.each -->
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="event">
            <img src="http://via.placeholder.com/200x200">
            <div class="date">
              2018-03-12
              <span class="like-btn">♡</span> <!-- 條件判斷切換 like 狀態 -->
            </div>
            <h5>表演名稱</h5>
            <div class="place">地點 <span>西門紅樓</span></div>
            <div class="time">時間 <span>19:30</span></div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>