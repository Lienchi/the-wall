<% if current_user %>
  <% if current_user.is_interested?(object) %>
    <%= link_to '♥', interest_path(object), method: :delete, class: "unlike-btn" %>
  <% else %>
    <%= link_to '♥', interests_path(event_id: object), method: :post, class: "like-btn" %>
  <% end %>  
<% else %>
    <%= link_to '♥', new_user_session_path, class: "like-btn" %>
<% end %>
