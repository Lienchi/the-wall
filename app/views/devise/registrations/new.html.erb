<div class="container-fluid">

  <div class="userform">
    <h2>會員註冊</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>
      
      <div class="form-group">
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
        </div><br />

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div><br />

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(不得少於<%= @minimum_password_length %>個字)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div><br />

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Password Again" %>
        </div><br />

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>

</div>